<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <h1><%= title %></h1>
    <%- include('./partials/navBar.ejs') %>  

    <% if (typeof msg !== 'undefined') {%>
        <%= msg %>
    <%}%>

    <form class='formulario' action="/edit/<%= user._id%>" method="POST">

        <div>
            <label>Nome :</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label>Idade  :</label>
            <input type="text" name="age" placeholder="Digite a sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label>E-mail:</label>
            <input type="text" name="email" placeholder="Digite seu E-mail" value="<%= user.email %>">
        </div>
        <div>
        <button type="submit">Editar</button>
    </form>


    <%- include('./partials/foot.ejs') %>
</body>
</html>